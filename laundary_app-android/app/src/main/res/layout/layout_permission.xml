<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_4sdp"
    android:padding="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent" />

        <ImageView
            android:id="@+id/iv_permission_related"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home_active" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        android:text="For showing a relevant offer,allow JustWarranty access to your location  "
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp">

        <Button
            android:id="@+id/btn_not_now_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/_16sdp"
            android:background="@drawable/rectangular_ripple_effect"            android:text="Not Now"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sdp" />
<!--        android:background="?android:attr/selectableItemBackground"-->

        <Button
            android:id="@+id/btn_continue_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/btn_not_now_permission"
            android:background="@drawable/rectangular_ripple_effect"
            android:text="Continue"
            android:textColor="@color/colorAccent"
        app:rippleColor ="@color/colorBlack"
            android:textSize="@dimen/_12sdp"

            />
    </RelativeLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>
