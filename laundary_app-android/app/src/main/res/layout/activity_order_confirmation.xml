<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_8sdp"
    tools:context=".ui.activity.OrderConfirmationActivity">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Summery"
            android:textSize="@dimen/_12sdp"
            android:drawableLeft="@drawable/back_icon"
            android:drawablePadding="@dimen/_10sdp"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/colorMain"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9">
            <ImageView
                android:id="@+id/home_laundary_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/home_image"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_margin="@dimen/_5sdp">
            <TextView
                android:id="@+id/home_laundry_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/_3sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="Lavagettone"
                android:textColor="@color/colorMain"
                android:textSize="@dimen/_14sdp" />
            <TextView
                android:id="@+id/home_laundry_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/_3sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="South street 34-A"
                android:textColor="@color/colorgrey"
                android:textSize="@dimen/_10sdp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/home_laundry_rating_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"

                    android:layout_marginLeft="@dimen/_20sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="3"
                    android:textColor="@color/rating"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="right|bottom"
            android:orientation="vertical"
            >


        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Order Confirmation"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Add Item"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/roboto_medium"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Dry Clean"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_5sdp"
        android:fontFamily="@font/roboto_medium"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="1"
            android:textColor="@color/colorCheckBox"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="*"
            android:textColor="@color/colorCheckBox"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Shirt"
            android:textColor="@color/colorCheckBox"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_5sdp"
            android:fontFamily="@font/roboto_medium"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_button"
           android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_alignParentEnd="true"

            >
            <ImageButton
                android:id="@+id/plus_one_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:background="@drawable/icon_plus"

              />
            <TextView
                android:id="@+id/count_one_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp"

                android:fontFamily="@font/roboto_medium"/>
            <ImageButton
                android:id="@+id/minus_one_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_minus"

                />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Wash and Iron"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/_12sdp"
        android:padding="@dimen/_5sdp"
        android:fontFamily="@font/roboto_medium"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="2"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="*"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Thumb"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_button"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_alignParentEnd="true"

            >
            <ImageButton
                android:id="@+id/plus_sec_ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_plus"

                />
            <TextView
                android:id="@+id/count_sec_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="1"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp"

                android:fontFamily="@font/roboto_medium"/>
            <ImageButton
                android:id="@+id/minus_sec_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_minus"

                />
        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Additional Note"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/roboto_medium"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCheckBox"
        android:layout_marginTop="@dimen/_8sdp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:hint="Write .."
        android:padding="@dimen/_8sdp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Pick Up Delivery Detail"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/roboto_medium"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_edittext">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Date"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorMain"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 September"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorCheckBox"/>
            <TextView
               android:id="@+id/pickupTime_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorCheckBox"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_edittext">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Date"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorMain"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="16 September"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:id="@+id/DeliveryTime_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorCheckBox"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fluper"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorMain"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noida"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorCheckBox"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Uttar Pradesh"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorCheckBox"/>
        </LinearLayout>


            <TextView
               android:id="@+id/change_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change"

                android:background="@drawable/background_button"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorWhite"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Price Detail"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/roboto_medium"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Item Total"
            android:textColor="@color/colorCheckBox"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="5 SAR"
            android:textColor="@color/colorCheckBox"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/roboto_medium"/>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Delivery Charges"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="5 SAR"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Taxes"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Promocode Applied"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Refferal Point"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="0"
                android:textColor="@color/colorCheckBox"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Grand Total"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/roboto_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="10 SAR"
                android:textColor="@color/green"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/roboto_medium"/>
        </RelativeLayout>

        <Button
       android:id="@+id/proceed_to_payment_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed To Payment"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/background_button"
        android:textSize="@dimen/_12sdp"/>
    </LinearLayout>
   </ScrollView>
</LinearLayout>