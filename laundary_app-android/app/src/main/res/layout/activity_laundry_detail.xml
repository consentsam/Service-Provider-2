<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".ui.activity.LaundryDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    >
                    <ImageButton
                        android:id="@+id/home_detail_back_ib"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/back_icon"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:layout_alignParentRight="true">
                        <ImageButton
                            android:id="@+id/home_detail_heart_ib"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/home_heart_unfill"/>
                        <ImageButton
                            android:id="@+id/home_detail_share_ib"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/shpdelt_share"/>


                    </LinearLayout>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_20sdp">
                    <ImageView
                        android:id="@+id/home_detail_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:background="@drawable/home_image"
                        />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_8sdp">


            <TextView
                android:id="@+id/home_laundry_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/roboto_bold"
                android:text="Laundry"
                android:textColor="@color/colorMain"
                android:textSize="@dimen/_14sdp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="address"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:textColor="@color/colorgrey"
                        android:textSize="@dimen/_10sdp" />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="1.5 km"
                       android:layout_alignParentRight="true"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/home_detail_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesettiong .Lorem Ipsum has been the industry's standard dummy text ever"

                    android:textColor="@color/colorgrey"
                    android:textSize="@dimen/_10sdp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorgrey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/home_detail_rating_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="4.8"
                            android:textColor="@color/rating"
                            android:drawableLeft="@drawable/home_rat_fill"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:drawablePadding="@dimen/_5sdp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="4.8"
                            android:textColor="@color/colorgrey"

                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:drawablePadding="@dimen/_5sdp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/home_detail_deliverytype_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Paid Delivery"
                            android:textColor="@color/colorgrey"

                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:drawablePadding="@dimen/_5sdp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/home_detail_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="SAR 50"
                            android:textColor="@color/green"

                            android:textSize="@dimen/_12sdp"
                            android:fontFamily="@font/roboto_bold"
                           />
                        <TextView
                            android:id="@+id/home_detail_minorder_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Min Order"
                            android:textColor="@color/colorgrey"

                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_regular"
                            />


                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorgrey"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Delivery Type"
                    android:textColor="@color/colorMain"
                    android:textSize="@dimen/_14sdp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Normal Delivery"

                        android:textColor="@color/colorgrey"
                        android:textSize="@dimen/_12sdp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="2-3 Days"
                       android:layout_alignParentRight="true"
                        android:textColor="@color/colorgrey"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Express Delivery"

                        android:textColor="@color/colorgrey"
                        android:textSize="@dimen/_12sdp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="@dimen/_3sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Next Day"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorgrey"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>


        </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_list_recyclerview"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                tools:listitem="@layout/categoty_type_card"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cloth"
                    android:textColor="@color/colorMain"
                    android:textSize="@dimen/_12sdp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">
                    <ImageButton
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/wash_iron"
                        />
                    <ImageButton
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/iron"
                        />
                    <ImageButton
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/dryclean"
                        />
                </LinearLayout>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_list_recyclerview"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                tools:listitem="@layout/item_card"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/proceed_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:padding="@dimen/_8sdp"
                android:elevation="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                >

                <TextView
                    android:id="@+id/proceed_to_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proceed To Payment"
                    android:visibility="invisible"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorMain"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>