<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.resetpassword.ResetPasswordActivity">
    <ImageView
        android:id="@+id/img_back"
        style="@style/RippleEffectWithoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp"
        android:src="@drawable/back_icon"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:orientation="vertical">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/reset_password"
                android:textColor="@color/colorMain"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_16sdp"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/reset_password_message"
                android:textColor="@color/colorCheckBox"
                android:lineSpacingMultiplier="1.2"
                android:textSize="@dimen/_13sdp" />
            <RelativeLayout
                android:id="@+id/rl_password"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_height="wrap_content"
                style="@style/EditBoxWithoutBackgroundStyle">

                <EditText
                    android:id="@+id/et_password_reset"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_password"
                    android:inputType="textPassword"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:imeOptions="actionDone"

                    android:maxLength="15"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:id="@+id/iv_show_hide_password_reset"
                    style="@style/RippleEffectWithoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:padding="@dimen/_16sdp"
                    android:src="@drawable/hide" />

            </RelativeLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditBoxWithoutBackgroundStyle">

                <EditText
                    android:id="@+id/et_confirm_password_reset"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/_16sdp"
                    android:imeOptions="actionDone"
                    android:hint="@string/re_enter_password"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:textCursorDrawable="@null" />

                <ImageView
                    android:id="@+id/iv_show_hide_repassword_reset"
                    style="@style/RippleEffectWithoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:padding="@dimen/_16sdp"
                    android:src="@drawable/hide" />

            </RelativeLayout>


            <Button
                android:id="@+id/inc_btn_reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button"
                android:layout_marginTop="@dimen/_32sdp"
                android:textColor="@color/colorWhite"
                android:layout_marginBottom="@dimen/_24sdp"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_16sdp"
                android:textAllCaps="true"
                android:text="@string/reset_password"/>




        </LinearLayout>
    </ScrollView>
</LinearLayout>