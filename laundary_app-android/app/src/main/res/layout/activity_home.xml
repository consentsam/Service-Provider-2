<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.home.HomeActivity">
    <TextView
      android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/home_message"
        android:textColor="@color/EditTextLabelColor"
        android:lineSpacingMultiplier="1.2"
        android:textSize="@dimen/_13sdp"
        android:padding="@dimen/_16sdp"/>

    <ImageView
        android:id="@+id/img_sign_out"
        style="@style/RippleEffectWithoutButton"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:padding="@dimen/_16sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/signout_icon"/>

</RelativeLayout>